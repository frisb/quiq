{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "es2017",
    "watch": true,
    "skipLibCheck": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "exclude": [
    "node_modules"
  ]
}